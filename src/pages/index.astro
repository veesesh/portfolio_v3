---
import ShadedBox from "../components/ui/shaded-box.astro";
import Box from "../components/ui/box.astro";

import AboutMe from "../components/about-me.astro";
import Projects from "../components/projects.astro";
import Experience from "../components/experience.astro";
import Community from "../components/community.astro";

import Design from "../components/util/image-dialog.tsx";

import "../styles/global.css";

const designImages = [
    { src: "/images/image-3.png", alt: "Design 1" },
    { src: "/images/image-2.png", alt: "Design 2" },
    { src: "/images/image-1.png", alt: "Design 3" },
    { src: "/images/image-5.png", alt: "Design 5" },
    { src: "/images/image-7.png", alt: "Design 4" },
    { src: "/images/image-6.png", alt: "Design 6" },
    { src: "/images/image-9.png", alt: "Design 7" },
    { src: "/images/image-4.png", alt: "Design 8" },
    { src: "/images/image-8.png", alt: "Design 9" },

];
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="generator" content={Astro.generator} />
        <title>Vee</title>
    </head>
    <body>
        <main
            class="font-jetbrains mx-auto max-w-[800px] overflow-x-hidden px-6 py-24 md:overflow-x-visible"
        >
            <div>
                <ShadedBox>
                    <AboutMe />
                </ShadedBox>

                <div class="pt-16">
                    <Box label="Experience">
                        <Experience />
                    </Box>
                </div>

                <div class="pt-16">
                    <Box label="Projects"><Projects /></Box>
                </div>

                <div class="pt-16">
                    <Box label="Community Work"><Community/></Box>
                </div>

                <div class="pt-16">
                    <ShadedBox label="Community is Love">
                        <Design designImages={designImages} client:load />
                    </ShadedBox>
                </div>
            </div>
        </main>
    </body>
</html>
