---
const { label } = Astro.props;
---

<div class="flex flex-col">
    {
        label && (
            <div class="-mb-1 flex flex-col space-y-1.5 p-6 py-0">
                <h3 class="text-base font-normal leading-none tracking-tight">
                    <span class="relative z-10 -mx-2 bg-white px-2">
                        {label}
                    </span>
                </h3>
            </div>
        )
    }
    <div
        class="relative border-2 bg-white border-border-contrast p-3 md:p-6 after:bg-dotted after:absolute after:-bottom-2 after:-right-2 after:left-2 after:top-2 after:-z-10 after:content-['']"
    >
        <slot />
    </div>
</div>
